<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#3E0000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kakiridev.simplywallet.simplyintervaltimer.MainActivity">

    <LinearLayout
        android:id="@+id/LL_Timer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Total Time -->
        <TextView
            android:id="@+id/TV_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Total time: 10:00"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>

<!-- Series -->
        <TextView
            android:id="@+id/TV_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SERIES 1 / 5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TV_repeats_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="REPEATS 1 / 10"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"/>



<!-- Work Time -->
        <TextView
            android:id="@+id/TV_work_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="WORK TIME: 15:00"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/TV_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="00:00"
            android:textSize="70sp" />

<!-- Rest Time -->
        <TextView
            android:id="@+id/TV_rest_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="REST TIME: 05:00"
            android:textSize="20sp" />






        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="STOP" />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/LL_Menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:visibility="visible">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp">


<!-- czas powtórzeń -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ET_intervalMin"
                    android:background="#380303"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:hint="min"
                    android:inputType="number" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/ET_intervalSec"
                    android:background="#380303"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="sec"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:inputType="number" />

            </LinearLayout>

            <TextView
                android:id="@+id/TV_intervalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:paddingBottom="25dp"
                android:text="WORK TIME" />


<!-- liczba powtórzeń -->
            <EditText
                android:id="@+id/ET_intervalCount"
                android:background="#380303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:padding="5dp"
                android:text="1" />

            <TextView
                android:id="@+id/TV_intervalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:paddingBottom="25dp"
                android:text="WORK COUNT" />


<!-- Przerwa -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ET_breaklMin"
                    android:background="#380303"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="min"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/ET_breakSec"
                    android:background="#380303"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="sec"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:id="@+id/TV_breakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:textSize="20sp"
                android:gravity="center_horizontal"

                android:paddingBottom="25dp"
                android:text="BREAK TIME" />





<!-- SERIE -->
            <EditText
                android:id="@+id/ET_intervalSeries"
                android:background="#380303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:text="0"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/TV_intervalSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="8"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="SERIES COUNT" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="START"
                android:layout_column="1"
                android:layout_row="9"
                android:layout_columnWeight="1"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>
