<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kakiridev.SIT.simplyintervaltimer.MainActivity">

    <LinearLayout
        android:id="@+id/LL_Timer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Total Time -->
        <TextView
            android:id="@+id/TV_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Total time: 10:00"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>

<!-- Series -->
        <TextView
            android:id="@+id/TV_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SERIES 1 / 5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TV_repeats_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="REPEATS 1 / 10"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"/>



<!-- Work Time -->
        <TextView
            android:id="@+id/TV_work_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="WORK TIME: 15:00"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/TV_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="00:00"
            android:textSize="70sp" />

<!-- Rest Time -->
        <TextView
            android:id="@+id/TV_rest_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="REST TIME: 05:00"
            android:textSize="20sp" />






        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="STOP" />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/LL_Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


<!-- czas powtórzeń -->

            <TextView
                android:id="@+id/TV_intervalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:text="Work Interval"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/IB_intervalTime_minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    />

                <EditText
                    android:id="@+id/ET_intervalMin"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:text="00"
                    android:inputType="number" />

                <TextView
                    android:layout_width="10dp"
                    android:textSize="20sp"
                    android:text=":"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/ET_intervalSec"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/IB_intervalTime_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>




<!-- liczba powtórzeń -->

            <TextView
                android:id="@+id/TV_intervalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:text="Work Count" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:paddingBottom="15dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/IB_intervalCount_minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/ET_intervalCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/IB_intervalCount_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

<!-- Przerwa -->

            <TextView
                android:id="@+id/TV_breakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:text="Rest Time"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/IB_intervalRest_minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@+id/ET_breaklMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="10dp"
                    android:textSize="20sp"
                    android:text=":"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/ET_breakSec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/IB_intervalRest_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>


<!-- SERIE -->

            <TextView
                android:id="@+id/TV_intervalSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="Series" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="8"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/IB_Series_minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/ET_intervalSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:layout_row="7"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:text="0"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/IB_Series_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>


        </GridLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="START" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <com.google.android.gms.ads.AdView

            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:background="@color/colorAccent"
            ads:adUnitId="ca-app-pub-8343407965657663/6900531377">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>



</LinearLayout>
